    "anthropic",
    "wrapper",
    "yolo",
    "safe-mode",
    "permissions"
  ],
  "author": "eastlondoner (fork by maxparez)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maxparez/claude-yolo/issues"
  },
  "homepage": "https://github.com/maxparez/claude-yolo#readme",
  "engines": {
    "node": ">=14.16"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ]
}